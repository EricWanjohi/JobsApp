<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/margin4dp"
    android:layout_margin="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/blueGrey900">

        <TextView
            android:id="@+id/job_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding8dp"
            android:textSize="18sp"
            android:textColor="@color/whiteTheme"
            android:textStyle="bold|italic"
            android:maxLines="2"
            android:text="Job Title"
            android:ellipsize="end"
            android:background="@color/blueGrey900"/>

        <TextView
            android:id="@+id/job_desc_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding6dp"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:textStyle="bold|italic"
            android:maxLines="10"
            android:text="Job Description"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/job_budget_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding6dp"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:textStyle="bold|italic"
            android:maxLines="1"
            android:text="Job Budget"
            android:ellipsize="end"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>