<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/job_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/margin6dp"
    android:layout_margin="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/blueGrey900">

        <TextView
            android:id="@+id/job_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding8dp"
            android:paddingStart="@dimen/padding16dp"
            android:paddingEnd="@dimen/padding16dp"
            android:textSize="18sp"
            android:textColor="@color/whiteTheme"
            android:textStyle="bold"
            android:maxLines="2"
            android:text="@string/job_title"
            android:ellipsize="end"
            android:background="@color/grey_900" />

        <TextView
            android:id="@+id/job_desc_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding6dp"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:paddingEnd="@dimen/padding16dp"
            android:paddingStart="@dimen/padding16dp"
            android:textStyle="normal"
            android:maxLines="2"
            android:text="@string/job_description"
            android:ellipsize="end"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/job_budget_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding6dp"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:maxLines="1"
                android:text="@string/job_budget"
                android:paddingStart="@dimen/padding16dp"
                android:paddingEnd="@dimen/padding16dp"
                android:ellipsize="end"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/new_job_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:text="@string/bid"
                android:padding="0dp"
                android:paddingStart="@dimen/padding16dp"
                android:paddingEnd="@dimen/padding16dp"
                android:ellipsize="end"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:background="@color/blueGrey900" />
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>